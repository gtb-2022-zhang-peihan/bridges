#!/bin/bash
if [[ $1 = "" ]];then
    echo "usage: todo <init|list|add|edit|remove|reset|mark|remark> [args]"
    fi

if [[ $1 = "init" ]];then
    touch 1.txt | echo "Initialized successfully" 
    fi

if [[ $1 = "add" ]];then
    echo "1. ${*:2}" >> 1.txt
    fi

if [[ $1 = "list" ]];then
    awk -F. '{print NR $2}' 1.txt
    fi
  